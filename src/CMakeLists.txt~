SET(module_name ${PROJECT_NAME})
add_library(${PROJECT_NAME} SHARED CamGigEProsilica.cpp)
target_link_libraries(${PROJECT_NAME} rt PvAPI camera_interface pthread)

install(TARGETS ${PROJECT_NAME} 
		RUNTIME DESTINATION bin
		LIBRARY DESTINATION lib
    )

SET(TestViewer TestViewer)
SET(module_name ${TestViewer})
add_executable(${TestViewer} TestViewer.cpp)   
target_link_libraries(${TestViewer} cv highgui camera_prosilica_gige)
install(TARGETS ${TestViewer_NAME} RUNTIME DESTINATION ${PROJECT_SOURCE_DIR}/test)

